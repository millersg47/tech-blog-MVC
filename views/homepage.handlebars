<!-- Loop over each object in the posts array -->

{{#each posts as |post|}}
  <div class="card" style="width: 75rem;">
    <div class="card-body">
      <h2 class="card-title">
        <a href="/post/{{post.id}}">{{post.title}}</a></h2>
      <h6 class="card-subtitle mb-2 text-muted">Created by
        {{post.user.username}}
        on
        {{format_date post.date_created}}</h6>
      <p class="card-text">{{post.content}}</p>
    </div>
  </div>
{{/each}}